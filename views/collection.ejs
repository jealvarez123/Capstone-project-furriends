<!DOCTYPE html>
<html lang="en">
<head>


<% include ./partials/head.ejs %>
</head>
<body>

  <header>
      <% include ./partials/header.ejs %>
  </header>

<main>
<div id='pets'>
<% pets.forEach(function(pet) { %>
  <!-- one pet -->
  <div class="row pet">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-default">
        <div class="panel-body">
        <!-- begin pet internal row -->
          <div class='row'>
            <div class="col-md-3 col-xs-12 thumbnail pet-art">
              <img src= "<%= pet.imageurl%>" class='img1' width="1100" height="1100">
            </div>
            <div class="col-md-9 col-xs-12">
              <ul class="list-group">
                <li class="list-group-item">
                  <h4 class='inline-header'>Name:</h4>
                  <span class='pet-name'><%= pet.petName %></span>
                </li>
                <li class="list-group-item">
                  <h4 class='inline-header'>breed:</h4>
                  <span class='artist-name'><%= pet.breed %></span>
                </li>
                <li class="list-group-item">
                  <h4 class='inline-header'>Age:</h4>
                  <span class='pet age'><%= pet.age %></span>
                </li>
                <li class="list-group-item">
                  <h4 class='inline-header'>Sex:</h4>
                  <span class='album-releaseDate'><%= pet.sex %></span>
                </li>
                <li class="list-group-item">
                  <p>
                    <a class="btn btn-primary btn-large"href="collections/<%=pet._id %>/edit">EDIT</a>
                  </p>

                <li class='list-group-item'>
                <form id='delete' action='/collections/<%= pet._id %>?_method=DELETE' method='POST' >
                  <button class='btn btn-danger'>DELETE</button>
                </form>
              </li>

              </ul>
            </div>
          </div>
           <!-- end of pet internal row -->
          <div class='panel-footer'>
          </div>
        </div>
      </div>
    </div>
  </div>
   <!-- end one pet -->
<% }); %>

<div class="containerOne">
  <form method="POST" action="/collections">
    <div class="row">
      <div class="c25">
        <label for="petName">Name</label>
      </div>
      <div class="c75">
        <input required type="text" id="petName" name="petName" placeholder="...">
      </div>
    </div>
    <div class="row">
      <div class="c25">
        <label for="breed">Breed</label>
      </div>
      <div class="c75">
        <input required type="text" id="breed" name="breed" placeholder="...">
      </div>
    </div>
    <div class="row">
      <div class="c25">
        <label for="age">Age</label>
      </div>
      <div class="c75">
        <input required type="text" id="age" name="age" placeholder="...">
      </div>
    </div>
    <div class="row">
      <div class="c25">
        <label for="sex">Sex</label>
      </div>
      <div class="c75">
        <input required type="text" id="sex" name="sex" placeholder="...">
      </div>
    </div>
    <div class="row">
      <div class="c25">
        <label for="imageurl"> Picture of your pet</label>
      </div>
      <div class="c75">
        <input required type="text" id="imageurl" name="imageurl" placeholder="...">
      </div>
    </div>
    <div class="row">
      <input type="submit" value="Submit">
    </div>
  </form>
</div>

</div>
</main>

<footer>
    <% include ./partials/footer.ejs %>
</footer>

</body>
</html>
